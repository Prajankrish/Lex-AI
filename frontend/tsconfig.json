{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",

    "jsx": "react-jsx",
    "allowJs": false,
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "types": ["node"],
    "isolatedModules": true,
    "allowImportingTsExtensions": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
